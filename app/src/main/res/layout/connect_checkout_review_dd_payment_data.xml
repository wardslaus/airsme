<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <RelativeLayout
            android:id="@+id/connect_checkout_review_dd_payment_data_iconwrapper"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/connect_checkout_review_dd_payment_data_payment_method_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/connect_checkout_layout_text_selected_payment_method"
                android:textAppearance="@style/ConnectCheckout.Text" />

            <TextView
                android:id="@+id/connect_checkout_review_dd_payment_data_payment_method_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/connect_checkout_layout_text_selected_payment_method_direct_debit"
                android:textAppearance="@style/ConnectCheckout.Text" />
        </RelativeLayout>

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_name_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_iconwrapper"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:text="@string/connect_checkout_layout_text_name"
            android:textAppearance="@style/ConnectCheckout.Review" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_iconwrapper"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/connect_checkout_review_dd_payment_data_name_prefix"
            android:gravity="right"
            android:text="@string/connect_checkout_layout_dummy_name"
            android:textAppearance="@style/ConnectCheckout.Review.Bold" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_account_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_name_prefix"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:text="@string/connect_checkout_layout_text_dd_account_number"
            android:textAppearance="@style/ConnectCheckout.Review" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_name_prefix"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/connect_checkout_review_dd_payment_data_account_prefix"
            android:gravity="right"
            android:text="@string/connect_checkout_layout_dummy_dd_account_number"
            android:textAppearance="@style/ConnectCheckout.Review.Bold" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_bank_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/connect_checkout_review_dd_payment_data_account_prefix"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:text="@string/connect_checkout_layout_text_dd_bank_number"
            android:textAppearance="@style/ConnectCheckout.Review" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_account_prefix"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/connect_checkout_review_dd_payment_data_bank_prefix"
            android:gravity="right"
            android:text="@string/connect_checkout_layout_dummy_dd_bank_number"
            android:textAppearance="@style/ConnectCheckout.Review.Bold" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_country_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/connect_checkout_review_dd_payment_data_bank_prefix"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:text="@string/connect_checkout_layout_text_country"
            android:textAppearance="@style/ConnectCheckout.Review" />

        <TextView
            android:id="@+id/connect_checkout_review_dd_payment_data_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/connect_checkout_review_dd_payment_data_bank_prefix"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/connect_checkout_review_dd_payment_data_country_prefix"
            android:gravity="right"
            android:text="@string/connect_checkout_layout_dummy_country"
            android:textAppearance="@style/ConnectCheckout.Review.Bold" />

        <Button
            android:id="@+id/connect_checkout_review_dd_payment_data_button"
            style="@style/ConnectCheckout.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/connect_checkout_review_dd_payment_data_store_account_data"
            android:text="@string/connect_checkout_layout_text_pay" />
        
         <CheckBox
            android:id="@+id/connect_checkout_review_dd_payment_data_store_account_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_checkout_review_dd_payment_data_country_prefix"
            android:text="@string/connect_checkout_layout_text_store_account_data" 
            android:textAppearance="@style/ConnectCheckout.Review.Bold"
            android:layout_marginLeft="25dp"
           	android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:textColor="#202020"
            
            />
    </RelativeLayout>

</ScrollView>