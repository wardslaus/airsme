<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/pqual_main"
    android:theme="@style/MyEditText"
 >

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/salutation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"

                android:layout_marginTop="15dp"
                android:layout_weight=".28"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:text="Education" />

                <Spinner
                    android:id="@+id/pqual_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@+id/txtEducation"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/salutation2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"

                android:layout_marginTop="15dp"
                android:layout_weight=".28"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtProffession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proffession" />

                <Spinner
                    android:id="@+id/pqual_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtProffession"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/salutaftionf2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"

                android:layout_marginTop="15dp"
                android:layout_weight=".28"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTransport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport" />

                <Spinner
                    android:id="@+id/pqual_own_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtTransport"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/salutatifonf2c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"

                android:layout_marginTop="15dp"
                android:layout_weight=".28"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtEmployment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employment" />

                <Spinner
                    android:id="@+id/pqual_employed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtEmployment"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/pqual_languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Languages"
                    android:inputType="textMultiLine"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/pqual_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Skills"
                    android:inputType="textMultiLine"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/pqual_aboutme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="About me"
                    android:inputType="textMultiLine"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/pqualbtn"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Next"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

