<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ConnectCheckout" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ConnectCheckout.Text">
        <item name="android:textColor">#202020</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ConnectCheckout.Text.Bold" parent="ConnectCheckout.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConnectCheckout.Text.ListItem" parent="ConnectCheckout.Text">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ConnectCheckout.Text.Footer" parent="ConnectCheckout.Text">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ConnectCheckout.Text.Amount" parent="ConnectCheckout.Text">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ConnectCheckout.Text.Subject" parent="ConnectCheckout.Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ConnectCheckout.Text.Tax" parent="ConnectCheckout.Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ConnectCheckout.Review" parent="ConnectCheckout.Text">
        <item name="android:textSize">14sp</item>
    </style>
    
        <style name="ConnectCheckout.InputHint" parent="ConnectCheckout.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ConnectCheckout.Review.Bold" parent="ConnectCheckout.Review">
        <item name="android:textStyle">bold</item>
    </style>
    

    <style name="ConnectCheckout.Input" parent="android:Widget.EditText">
        <item name="android:textColor">#202020</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="ConnectCheckout.Input2" parent="ConnectCheckout.Input">
        <item name="android:textColor">#202020</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ConnectCheckout.Button" parent="android:Widget.Button">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>